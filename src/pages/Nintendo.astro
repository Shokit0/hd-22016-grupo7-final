---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import NintendoCard from "../components/NintendoComponents/NintendoCard.astro";

// Obtener los juegos de la colección nintendoContent
const juegos = await getCollection("nintendoContent");
---

<Layout title="G2A - Nintendo">
  <div style="display: flex; gap: 2rem; padding: 2rem;">
    
    <!-- Lista de juegos -->
    <div style="flex: 3;">
      <h1>Juegos Nintendo</h1>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1rem;">
        {juegos.map(({ data }, index) => (
          <NintendoCard key={index} {...data} />
        ))}
      </div>
    </div>

    <!-- Barra lateral derecha con filtros -->
    <div style="flex: 1; border-left: 1px solid #ccc; padding-left: 1rem;">
      <h2>Buscar y Filtrar</h2>

      <input type="text" placeholder="Buscar juegos..." style="width: 100%; padding: 0.5rem; margin-bottom: 1rem;" />

      <h3>Categorías</h3>
      <ul style="list-style: none; padding-left: 0;">
        <li><input type="checkbox" id="aventura" /> <label for="aventura">Aventura</label></li>
        <li><input type="checkbox" id="accion" /> <label for="accion">Acción</label></li>
        <li><input type="checkbox" id="rpg" /> <label for="rpg">RPG</label></li>
        <!-- Agrega más según tus categorías -->
      </ul>
    </div>
    
  </div>
</Layout>
