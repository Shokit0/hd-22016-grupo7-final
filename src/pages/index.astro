---
import NextGames from "../components/home/NextGames.astro";
import CarouselHome from "../components/home/CarouselHome.astro";
import Layout from "../layouts/Layout.astro";
import CategoriasPlataformas from "../components/home/CategoriasPlataformas.astro";
---

<Layout title="G2A">
  <CarouselHome data-testid="carousel-home" />
  <section class="flex flex-col px-4 py-8">
    <div class="flex flex-col items-center mb-4 py-6 w-full">
      <h2 class="text-4xl text-black font-bold">Juegos por Plataformas</h2>
      <p class="text-gray-600 pt-2">
        Encuentra lo que buscas en nuestra tienda de videojuegos.
      </p>
    </div>
    <CategoriasPlataformas data-testid="categorias-plataformas" />
  </section>
  <section class="flex flex-col px-4 py-8">
    <div class="flex flex-col items-center mb-4 py-6 w-full">
      <h2 class="text-4xl text-black font-bold">Próximos lanzamientos</h2>
      <p class="text-gray-600 pt-2">
        ¿No puedes esperarte a jugar? ¡Pide ya la clave y experiméntalo el
        primer día!
      </p>
    </div>
    <NextGames data-testid="next-games" />
  </section>
</Layout>
