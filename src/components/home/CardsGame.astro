---
import { Icon } from "astro-icon/components";

export interface CardsGameProps {
  name: string;
  description: string;
  image: string;
  price: number;
  discount: string;
  discountPrice: number;
  rating: number;
}

const { name, description, image, price, discount, discountPrice, rating } =
  Astro.props;
---

<div class="hover:scale-105 transition-transform duration-300">
  <div class="min-h-108 w-70 border border-gray-300 rounded-4xl shadow-xl p-4">
    <!-- Discount -->
    <div class="relative">
      <span
        class="absolute top-2 left-2 bg-orange-400 text-white text-xs font-semibold px-2 py-1 rounded-full"
      >
        {discount}
      </span>
      <!-- Wishlist Icon -->
      <button
        class="absolute top-2 right-2 w-8 h-8 bg-white rounded-full shadow flex items-center justify-center hover:bg-red-500 transition-transform duration-300"
      >
        <Icon name="wishlist" class="w-4 h-4 text-gray-500" />
      </button>
      <!-- Image -->
      <div>
        <img
          src={image}
          alt={name}
          class="object-cover rounded-2xl w-full h-[270px] fill"
        />
      </div>
    </div>

    <!-- Details -->
    <div class="mt-4">
      <h3 class="text-gray-800 font-medium text-base">
        {name}
      </h3>
      <!-- Ratings -->
      <div class="flex space-x-1 text-orange-500 text-sm mt-1">
        {
          Array.from({ length: 5 }, (_, index) => (
            <Icon
              name="rating"
              class={`w-4 h-4 ${index < rating ? "text-orange-500" : "text-gray-300"}`}
            />
          ))
        }
      </div>
      <!-- Pricing -->
      <div class="flex items-end justify-between">
        <div class="flex items-baseline space-x-2 mt-2">
          <span class="text-blue-600 text-xl font-semibold"
            >${discountPrice}</span
          >
          <span class="text-gray-400 text-sm line-through">${price}</span>
        </div>
        <button
          class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center shadow text-white"
        >
          <Icon name="cart" class="w-5 h-5" />
        </button>
      </div>
    </div>
  </div>
</div>
