---
export interface Props {
  imageSrc: string;
  altText: string;
  title?: string;
  trailer?: string; // AÃ±ade esta nueva prop
}

const { imageSrc, altText, title, trailer } = Astro.props;
---

<div class="w-full h-full p-4 sm:p-8">
  <div
    class="w-full h-full rounded-xl sm:rounded-2xl overflow-hidden relative group"
    data-trailer={trailer || ""}>
    <img
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      src={imageSrc}
      alt={altText}
    />
    <div
      class="absolute inset-x-0 bottom-0 p-3 sm:p-5 bg-gradient-to-t from-black/80 via-black/40 to-transparent">
      {
        title && (
          <h3 class="text-white text-xl sm:text-2xl md:text-4xl font-bold mb-2 sm:mb-3">
            {title}
          </h3>
        )
      }
    </div>
  </div>
</div>

<style>
  [data-trailer]:not([data-trailer=""]) {
    cursor: pointer;
  }
</style>
