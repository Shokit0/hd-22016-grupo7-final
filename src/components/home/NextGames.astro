---
import { Icon } from "astro-icon/components";
import CardsGame from "./CardsGame.astro";
import { juegos } from "../../pages/api/juegos.js";

const juegosIniciales = juegos.slice(0, 30);
---

<div class="flex justify-center items-center flex-col">
  <div
    id="juegos-container"
    class="grid grid-cols-1 sm:grid-cols-3 xl:grid-cols-5 gap-6">
    {juegosIniciales.map((game) => <CardsGame {...game} />)}
  </div>

  <button
    id="ver-mas-btn"
    class="mt-8 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full flex items-center">
    Ver m√°s
    <Icon name="arrow-down" class="ml-1" />
  </button>
</div>
